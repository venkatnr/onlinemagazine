<h1>Article</h1>
<fieldset>
	<%= form_tag('/articles', remote: true, :id=> "article_form") do%>
		<div class="form-group">
	    <label for="Name">Article Name</label>
	    <input type="text" class="form-control" id="name" name="article[name]" placeholder="Article Name">
	  </div>
	  <div class="form-group">
	    <label for="Name">Article Descritpion</label>
	    <textarea class="form-control" name="article[description]" rows="3"></textarea>
	  </div>
	  <input type="Submit" class="btn btn-primary">
	<% end %>
</fieldset>
<hr>
<div class="article_list">
	<% if @articles %>
		<%= render :partial => 'articles',:locals=>{:articles =>@articles } %>
	<%end%>
</div>